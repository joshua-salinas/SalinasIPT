<Window x:Class="SalinasWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalinasWPF"
        mc:Ignorable="d"
        Title="Coffee Shop" Height="550" Width="800"
        Background="White" WindowStartupLocation="CenterScreen">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Coffee Shop POS"
                   FontSize="20"
                   FontWeight="SemiBold"
                   Margin="0,0,0,15"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT PANEL -->
            <StackPanel Margin="0,0,15,0">
                <TextBlock Text="Add Item" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>

                <TextBlock Text="Item Name" Margin="0,0,0,3"/>
                <ComboBox Name="ItemComboBox"
                          Margin="0,0,0,10"
                          Height="28"
                          SelectionChanged="ItemComboBox_SelectionChanged">
                    <ComboBoxItem Content="Matcha" Tag="50"/>
                    <ComboBoxItem Content="Cappuccino" Tag="50"/>
                    <ComboBoxItem Content="Latte" Tag="60"/>
                    <ComboBoxItem Content="Mocha" Tag="60"/>
                </ComboBox>

                <TextBlock Text="Quantity" Margin="0,0,0,3"/>
                <TextBox Name="QuantityTextBox" Margin="0,0,0,10" Height="28"/>

                <TextBlock Text="Price" Margin="0,0,0,3"/>
                <TextBox Name="PriceTextBox" Margin="0,0,0,15" Height="28" IsReadOnly="True" Background="#f9f9f9"/>

                <Button Content="Add to Cart"
                        Height="32"
                        Background="#333"
                        Foreground="White"
                        BorderThickness="0"
                        Click="AddToCart_Click"/>
            </StackPanel>

            <!-- RIGHT PANEL -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Order Items" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>

                <DataGrid Grid.Row="1" Name="OrderDataGrid"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal"
                          BorderThickness="1"
                          BorderBrush="#ddd">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Item" Binding="{Binding Item}" Width="*"/>
                        <DataGridTextColumn Header="Qty" Binding="{Binding Qty}" Width="60"/>
                        <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="80"/>
                        <DataGridTextColumn Header="Total" Binding="{Binding Total}" Width="80"/>
                        <DataGridTemplateColumn Header="Actions" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Edit" Width="50" Height="24" Margin="2"
                                                Background="#007ACC" Foreground="White" BorderThickness="0"
                                                Click="EditItem_Click"/>
                                        <Button Content="Delete" Width="50" Height="24" Margin="2"
                                                Background="#dc3545" Foreground="White" BorderThickness="0"
                                                Click="DeleteItem_Click"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="2" Margin="0,15,0,0">
                    <TextBlock Name="TotalText"
                               Text="Total: ₱0.00"
                               FontSize="18"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Right"
                               Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="New Order" Width="90" Height="32" Margin="0,0,8,0"
                                Background="#666" Foreground="White" BorderThickness="0"
                                Click="NewOrder_Click"/>
                        <Button Content="Pay" Width="90" Height="32" Margin="0,0,8,0"
                                Background="#28a745" Foreground="White" BorderThickness="0"/>
                        <Button Content="Cancel" Width="90" Height="32"
                                Background="#dc3545" Foreground="White" BorderThickness="0"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
